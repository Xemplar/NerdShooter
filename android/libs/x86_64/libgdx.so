<script>
function loadShowcase(data) {
	// $("#tabletinner").html('<a href="showentry.html?id=' + data[0].id + '"><img src="' + data[0].imageUrls[0] + '" onerror="fixImage(this)"/></a>');
	var topgames = $("#showcase");
	for(var i=1; i < data.length; i++) {
		var game = data[i];
		var div = $(document.createElement("div")).addClass("unit").addClass("one-of-four");
		div.html('<a href="showentry.html?id=' + game.id + '">' +
				 '<img src="' + (game.imageUrls.length > 0?game.imageUrls[0]:"img/no_game.png") + '" onerror="fixImage(this)" />' +
				 '<span>' + game.title + '</span> by ' + game.creator + "</a>");
		topgames.append(div);
	}
}

$(document).ready(function() {
	$.ajax({
		url: "libgdx-site/service/randomGames?num=9",
		success: loadShowcase,
		dataType: "json",
		error: function() {
			loadShowcase(testGames(9));	
		}
	})
});

function fixImage(img){
	img.src="/img/notfound.png";
}
